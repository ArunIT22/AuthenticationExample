<div class="col-md-9">
    <form method="get">
        <div class="row">
            <label class="col-md-3 col-form-label">Select a Category</label>
            <div class="col-md-5">
                <select name="id" class="form-select" asp-items="@(new SelectList(ViewBag.Categories,"CategoryId","CategoryName"))">
                    <option>--Select--</option>
                </select>
            </div>
            <div class="col-md-2">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </div>
    </form>
    <hr />
</div>