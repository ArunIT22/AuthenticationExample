@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<h3>Welcome, @User.Identity.Name</h3>

<table class="table">
    @foreach (var item in User.Claims)
    {
        <tr>
            <td>@item.Type</td>
            <td>@item.Value</td>
        </tr>
    }
</table>

<br />
<form method="post" asp-action="Logout">
    <input type="submit" value="SignOut" class="btn btn-danger" />
</form>