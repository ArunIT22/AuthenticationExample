@using System.Security.Claims;

@if (User.Identity!.IsAuthenticated)
{
    var roleName = User.FindFirstValue(ClaimTypes.Role);
    if (roleName == "admin")
    {
        Layout = "_Layout";
    }
    else if (roleName == "employee")
    {
        Layout = "_EmployeeLayout";
    }
}
else
{
    Layout = "_DefaultLayout";
}

